.container-profile{
    background-color:#FAEBCD;
    height: 100vh;
    display: flex; 
    justify-content: center;
}

.background{
    background-color: #F8F8F8;
    background-size: cover;
    margin-top: 200rpx;
    padding-top: 200rpx;
    height: 1100rpx;
    width: 100vw;
    border-top-left-radius: 8%;
    border-top-right-radius: 8%;
    display:flex;
    flex-direction: column;
    align-items: center;
}
.card-pic{
    width: 180rpx;
    height: 180rpx;
    margin: 13rpx auto;
  
}

.avatar{
    position: absolute;
    background-color: white;
    top: 0rpx;
    left: 50%;
    border: 12rpx solid white;
    transform: translate(-50%, 50%);
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.userinfo-avatar{
    position: absolute;
    width: 130rpx;
    height: 130rpx;
    display:flex;
    align-self: center;
    justify-content: space-around;
}
.info {
