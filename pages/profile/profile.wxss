/* pages/profile/profile.wxss */

.container-profile{
    background-color:#FAEBCD;
    height: 100vh;
    display: flex; 
    justify-content: center;
}

.background{
    background-color: #F8F8F8;
    background-size: cover;
    margin-top: 200rpx;
    padding-top: 200rpx;
    height: 1100rpx;
    width: 100vw;
    border-top-left-radius: 8%;
    border-top-right-radius: 8%;
    display:flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    position: absolute;
    background-color: white;
    top: 0rpx;
    left: 50%;
    border: 6 solid white;
    transform: translate(-50%, 50%);
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.userinfo-avatar{
    position: absolute;
    width: 130rpx;
    height: 130rpx;
    display:flex;
    align-self: center;
    justify-content: space-around;
}
  
  .info{
    height: 100%;
    margin:30rpx 20rpx;
    padding:30rpx 20rpx;
    display:flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-content: center;
}
  .info-restaurantname{
  font-weight: bold; 
  font-size: 32rpx;
}

  .info-eventtime{
  font-size: 28rpx;
