/* pages/profile/profile.wxss */

.bg{
    background-color:#FAEBCD ;
    height: 100vh;
}


.bgcard {

    background-color: #F8F8F8;
    background-size: cover;
    margin-top: 200rpx;
    padding-top: 200rpx;
    height: 1100rpx;
    width: 100vw;
    border-top-left-radius: 8%;
    border-top-right-radius: 8%;
    display:flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    position: absolute;
    background-color: white;
    top: 0rpx;
    left: 50%;
    border: 6 solid white;
    transform: translate(-50%, 50%);
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.therealone {
    position: absolute;
    width: 190rpx;
    height: 190rpx;
    border-radius: 50%;
    display:flex;
    align-self: center;
    justify-content: space-around;
}


.userinfo-avatar{
    position: absolute;
    width: 130rpx;
    height: 130rpx;
    display:flex;
    align-self: center;
    justify-content: space-around;
}

.card-product image {
    height: 100%;
    width: 80rpx;
    object-fit: cover;
  }

  
