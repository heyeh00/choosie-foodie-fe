<view class="container-profile">
    <view class="background-card">
        <block wx:if="{{avatar}}">
            <view class="login" style="left: 270rpx;">
                <view class="avatar-wrapper">
                    <image class="avatar" src="{{avatar}}" mode="" />
                    <view class="nickname">
                        {{user.name}}

                    </view>
                </view>
            </view>
            <view class="card" wx:for="{{user_events}}" wx:key="index" bindtap="eventCard" data-event_id="{{item.event.id}}">
                <image class="card-pic" src="/icons/Food-icons/{{item.restaurant.cuisine}}.png" mode=""/>
                <view class="info">
                <view class="title">{{item.event.event_name}}</view>
                <view class="rating">
                    <view class="info-text">{{item.restaurant.name}}</view>
                </view> 
                <view class="last-info-row">
                    <view class="info-text">{{item.event.datetime}}</view>
                    <view class="cuisine">
                        <image class="cuisine-pic" src="/icons/Food-Icons/Any.png" mode=""/>
                        <text class="info-text">{{item.restaurant.cuisine}}</text>
                    </view>
                </view>
            </view>
            </view>
        </block>
        <block wx:else>
            <view class="login">
                <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
                    <image class="avatar" src="{{avatarUrl}}"></image>
                </button>
                <view class="nickname">
                    {{user.name}}
                </view>
                <view class="form">
                    <form bindsubmit="setNickname">
                        <input class="input" style="margin: 16rpx;" name="input" placeholder="Change name. Then pic." />
                        <view>
                            <button class="our-button" formType="submit">Submit</button>
                        </view>
                    </form>
                </view>
            </view>
        </block>
    </view>
</view>