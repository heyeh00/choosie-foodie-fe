<!-- HENRY CODE -->
<view class="container">
    <view class="background-card">
        <block wx:if="{{avatar}}">
            <view class="user-info">
                <view class="login" style="left: 270rpx;">
                    <view class="avatar-wrapper">
                        <image class="avatar" src="{{avatar}}" mode="" />
                        <view class="nickname">
                            {{user.name}}
                        </view>
                    </view>
                </view>
            </view>
            <!-- Display event restaurants -->
            <view wx:for="{{user_events}}" wx:for-item="user_event" wx:key="index" data-id="{{user_events.id}}">
                <view class="card" bindtap="eventCard" data-event_id="{{user_event.event.id}}">
                    <image src="/icons/food-icons/{{user_event.restaurant.cuisine}}.png" mode="aspectFill" class="card-img" />
                    <view class="card-info">
                        <view class="card-name">
                            {{user_event.event.event_name}}
                        </view>
                        <view class="card-detail">
                            <view>
                                {{user_event.restaurant.name}}
                            </view>
                            <view>
                                {{user_event.event.datetime}}
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </block>

        <block wx:else>
            <view class="login">
                <button class="btn-unset radius-full" style="height: 220rpx; width: 220rpx !important; padding: 0; margin: unset;" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
                    <image class="w100 h100" src="{{avatarUrl}}"></image>
                </button>
                <view class="nickname">
                    {{user.name}}
                </view>
                <input type="text" placeholder="name" bindblur="setNickname"/>
