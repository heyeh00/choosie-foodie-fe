<view wx:for="{{events}}" bindtap="chosenRestaurant" data-restaurantid="{{item.restaurant.id}}" data-eventid="{{item.id}}">
    <view class="card-m1 {{item.selected ? 'selected' : 'not-selected'}}">
        <view class="card-m2-info">
            <text style="font-size: 30rpx; margin-bottom: 30rpx;">{{item.restaurant.name}}</text>
            <view class="stars" style="display:flex">
                <view>rating</view>
                <view wx:for="{{item.restaurant.rating}}">
                    <image src="/icons/Page-icons/star_black.png" style="width: 20rpx; height: 20rpx;"></image>
                </view>
            </view>
            <view class="card-m2-info-line2">
                <view style="font-size: 24rpx;">ï¿¥{{item.restaurant.ave_price}}/person</view>
            </view>

            <view class="card-m2-info-line2">
                <view>
                    <image src="/icons/Food-Icons/cutlery.png" style="height: 30rpx; width:30rpx" mode="aspectFill" />
                    <text>{{item.restaurant.cuisine}}</text>
                </view>
            </view>
        </view>
    </view>
</view>

