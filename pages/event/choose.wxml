<view class="container-choose">
    <wx:key wx:for="{{events}}" bindtap="chosenRestaurant" data-restaurantid="{{item.restaurant.id}}" data-eventid="{{item.id}}">

        <view class="card-m1 {{item.selected ? 'selected' : 'not-selected'}}">
            <image class="card-pic" src="/icons/Food-Icons/{{item.restaurant.cuisine}}.png" mode=""/>
            <view class="info">
                <view class="title">{{item.restaurant.name}}</view>
                <view class="rating">
                    <view class="info-text">rating</view>
                    <wx:key wx:for="{{item.restaurant.rating}}">
                        <image class="star-pic" src="/icons/Page-icons/star_black.png"></image>
                    </wx:key>
                </view> 
                <view class="last-info-row">
                    <view class="info-text">ï¿¥{{item.restaurant.ave_price}} person</view>
                    <view class="cuisine">
                        <image class="cuisine-pic" src="/icons/Food-Icons/Any.png" mode=""/>
                        <text class="info-text">{{item.restaurant.cuisine}}</text>
                    </view>
                </view>
            </view>
        </view>
    </wx:key>

    <block wx:if="{{avatar}}">
        <button class="our-button" hover-class="btn-class" style="margin-top: 15vh;" bindtap="submitChoices">Submit</button>
    </block>
    <block wx:else>
        <button class="our-button" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar" hover-class="btn-class" style="margin-top: 15vh;">Submit</button>
    </block>
</view>