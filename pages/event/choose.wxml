<view class="card-m2" wx:for="{{restaurants}}">
    <image src="/icons/images/maotou.jpg" class="respic" mode="aspectFill"/>
    <view class="card-m2-info">

        <text style="font-size: 30rpx;">{{item.name}}</text>

        <view class="card-m2-info-line2">
            <text style="font-size: 24rpx;">ï¿¥{{item.price}}/person</text>
            <view class="stars" style="display:flex">
                <view wx:for="{{item.rating_int}}">
                    *
                    <!-- <image scr="/icons/Page-icons/star_black.png"></image> -->
                </view>
                <!-- <view wx:if="{{item.rating>=4.5}}">
                    <view wx:for="{{5}}">
                    *
                        <image scr="/icons/Page-icons/star_black.png"></image>
                    </view>
                </view> -->
            </view> 
        </view>
    
        <view class="card-m2-info-line2">
            <view>
                <image src="/icons/Food-Icons/cutlery.png" style="height: 30rpx; width:30rpx" mode="aspectFill"/>
                <text >{{item.cuisine}}</text>
            </view>
            <view>
                <image src="/icons/Page-icons/pin_white.png" style="height: 30rpx; width:30rpx" mode="aspectFill"/>
                <text>{{item.location}}</text>   
                
            </view>
        </view>
       
    </view>
</view>

<button bind:chooseavatar="login" open-type="chooseAvatar" class="our-button" style="margin-top: 100rpx">Submit</button>
