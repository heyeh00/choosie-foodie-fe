/* BANNER animation */

.duration3 { transition: 0.3s; }
.duration5 { transition: 0.5s; }
.duration7 { transition: 0.7s; }

@keyframes pulse {
    50% {
      opacity: .5;
    }
}

.animate-pulse { animation: pulse 1s cubic-bezier(0.4, 0, 0.6, 1) infinite; }

