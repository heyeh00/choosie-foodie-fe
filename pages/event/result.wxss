.container-result {
    margin-top: 24rpx;
    position: relative;
    height: 100vh;
    background-color: #F8F8F8 !important;
}

.card-l {
    width: 560rpx;
    border-radius: 50rpx;
    background-color: #FAEBCD;
    /* margin: auto; */
