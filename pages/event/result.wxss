.container-result {
    margin-top: 24rpx;
    position: relative;
}

.card-l {
    width: 560rpx;
    border-radius: 50rpx;
    background-color: #FAEBCD;
  }

.info {
    padding: 30rpx;
}

.card-pic {
    object-fit: cover;
    width: 100%;
}

.name {
    font-size: larger;
    font-weight: 500;
}

.icon {
    width: 50rpx;
    height: 50rpx;
}

.info-row {
    font-size: medium;
    display: flex;
    align-items: center;
}

.attendees {
    font-size: medium;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.person {
    text-align: center;
    margin: 8rpx 12rpx;
}

.person-icon {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}

.button-area {
    margin-top: 32rpx;
    display: flex;
}

.our-button {
    text-align: center;
    border-radius: 40rpx;
    font: normal 500 30rpx 'Raleway';
    background-color: #F7C873;
    color: #434343;
    border: 1rpx solid #434343; 
  }

  .our-button-inverse {
    text-align: center;
    border-radius: 40rpx;
    font: normal 500 30rpx 'Raleway';
    background-color: #434343;
    color: #F7C873;
    border: 1rpx solid #434343; 
  }

/* BANNER animation */

.duration3 { transition: 0.3s; }
.duration5 { transition: 0.5s; }
.duration7 { transition: 0.7s; }

@keyframes pulse {
    50% {
      opacity: .5;
    }
}

.animate-pulse { animation: pulse 1s cubic-bezier(0.4, 0, 0.6, 1) infinite; }

/* BANNER */

.in-progress-banner {
    width: 100%;
    height: 80rpx;
    background-color: #ffbb32;
    padding: 8rpx;
    margin-bottom: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.voting-text {
    font: normal 500 30rpx 'Raleway';
    font-size: large;
    font-weight: 700;
    text-align: center;
    color: #434343;
}

.in-progress-banner-reverse {
    width: 100%;
    height: 80rpx;
    background-color: #434343;
    padding: 8rpx;
    margin-bottom: 24rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.voting-text-reverse {
    font: normal 500 30rpx 'Raleway';
    font-size: large;
    font-weight: 700;
    text-align: center;
    color: #ffbb32;
}

  