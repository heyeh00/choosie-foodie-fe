<!--pages/event/event.wxml-->
{{user}}
{{user.id}}
{{user.name}}

<view>
    <view class="header">CREATE EVENT</view>
    <form bindsubmit="submitEvent">
        <label for="title">Event name:</label>
        <input class="input" style="margin-bottom: 30rpx;" type="text" id="name" name="name" value="{{event.name}}" />

        <!-- date 需要默认已选的 -->
        <view class="section">
            <view>{{event.date}}</view>
            <picker mode="date" value="{{date}}" start="{{event.date}}" bindchange="bindDateChange">
                <button>Edit</button>
            </picker>
        </view>


        <!-- time  需要默认为 null -->
        <view class="section">
            <view>{{event.time}}</view>
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                <button>Edit</button>
            </picker>
        </view>

        <view class="btn-area">
            <button style="margin: 30rpx 0" type="primary" formType="submit">Submit</button>
        </view>
    </form>
</view>