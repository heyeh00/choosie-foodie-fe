<view class="container-form">
    <view class="header">PLACEHOLDER</view>
    <form bindsubmit="submitEvent">
        <!-- cuisines  后台已经会自动随机调出9种菜系 -->
        <view wx:for="{{cuisines}}" wx:key="key" class="page-section page-section-gap">
            <checkbox-group name="cuisines">
        <view class="page-section page-section-gap">
            <checkbox-group bindchange="editCuisines" name="cuisines">
                <label>
                    <checkbox value="Any"/>Any
                </label>
                <label wx:for="{{cuisines}}">
                    <checkbox value="{{item}}" data-cuisine="{{item}}" />{{item}}
                </label>
            </checkbox-group>
        </view>

        <!-- date 需要默认为今天 -->
        <view class="section">
            <view class="section__title">Date</view>
            <picker mode="date" value="{{date}}" start="2015-09-01" bindchange="bindDateChange">
                <view class="picker">Selected Date: {{date}}</view>
            </picker>
        </view>

        <!-- time  需要默认为 null -->
        <view class="section">
            <view class="section__title">Choose a time</view>
            <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                <view class="picker">
                    Selected time: {{time}}
                </view>
            </picker>
        </view>

        <view class="btn-area">
            <!-- <button style="margin: 30rpx 0" formType="reset">Reset</button> -->
            <button style="margin: 30rpx 0" type="primary" formType="submit">Submit</button>
        </view>
    </form>
</view>